@page
@model Extreme_Moto_Store.Pages.Customer.Home.DetailsModel

<div class="">
    <form method="post">

        <input asp-for="ShoppingCart.ProductId" hidden />
        <input asp-for="ShoppingCart.ApplicationUserId" hidden />

        <div class="container backgroundWhite">
            <div class="card">
                <div class="card-header">
                    <div class="text-light ml-0 row ">
                        <div class="col-12 col-md-6 pt-2">
                            <h1 class="text-primary">@Model.ShoppingCart.Product.Name</h1>
                        </div>
                        <div class="col-12 col-md-6 text-end pt-2">
                            <h1 class="text-muted">$@Model.ShoppingCart.Product.Price</h1>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-8">
                                <div class="row">

                                    <div class="col-12">
                                        <span class="badge bg-warning p-3 h3">@Model.ShoppingCart.Product.Category.Name</span>
                                        <span class="badge bg-dark p-3">@Model.ShoppingCart.Product.ItemType.Name</span>
                                        <h3 class="text-success"></h3>

                                        <p class="text-secondary">@Html.Raw(Model.ShoppingCart.Product.Description)</p>

                                        <div class="form-floating my-2">
                                            <input asp-for="@Model.ShoppingCart.Count" class="form-control" aria-required="true" />
                                            <label asp-for="@Model.ShoppingCart.Count">Count</label>
                                            <span asp-validation-for="@Model.ShoppingCart.Count" class="text-danger"></span>
                                        </div>

                                    </div>

                                </div>
                            </div>
                            <div class="col-12 col-lg-4 p-1 text-center">
                                <img src="@Model.ShoppingCart.Product.Image" width="100%" class="rounded" />
                            </div>


                        </div>
                    </div>
                </div>

                <div class="card-footer">
                <div class="row justify-content-between">
                    
                    <div class="col-auto">
                        <a asp-page="Index" class="btn btn-outline-warning" style="width:150px;">Go Back</a>
                    </div>

                        <div class="col-auto">
                            <button type="submit" class="btn btn-outline-primary" style="width:150px;">Add to Cart</button>
                        </div>
                </div>
                </div>


                @*-----------------------To use later if needed--------------------------
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-6 pb-1 ">
                            <a class="btn btn-success btn-square form-control" style="height:50px;">Back to List</a>
                        </div>
                        <div class="col-12 col-md-6 ">
                            <button type="submit" class="btn btn-primary btn-square form-control" style="height:50px;">Add to Cart</button>
                        </div>
                    </div>
                </div>
                -------------------------------------------------------------------------*@


            </div>
        </div>
    </form>
</div>


@*On razor page If we want to add any Java scripts we can create a section and add*@

@section Scripts{
    @{
        //Client side validation - Scripts already provided on  default file _ValidationScriptsPartial.cshtml
        <partial name="_ValidationScriptsPartial" />

    }
}
